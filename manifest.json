{
  "manifest_version": 2,
  "name": "MtgTools for chrome",
  "description": "MtgTools for chrome, 更多功能欢迎使用微信小程序“MtgTools”",
  "version": "0.1",
  "update_url": "http://upext.chrome.360.cn/intf.php?method=ExtUpdate.query",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "unlimitedStorage"
  ],
  "background": {
        "scripts": ["js/background.js"],
        "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup\\popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/mtggoldfish.js"
      ],
      "matches": [
        "https://www.mtggoldfish.com/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/mtgstocks.js"
      ],
      "matches": [
        "https://www.mtgstocks.com/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/hareruya_jp.js"
      ],
      "matches": [
        "https://www.hareruyamtg.com/ja/deck/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/hareruya_en.js"
      ],
      "matches": [
        "https://www.hareruyamtg.com/en/deck/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/mtgdecks.js"
      ],
      "matches": [
        "https://mtgdecks.net/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/mtgtop8.js"
      ],
      "matches": [
        "https://www.mtgtop8.com/*"
      ],
      "run_at": "document_start"
    }
  ]
}